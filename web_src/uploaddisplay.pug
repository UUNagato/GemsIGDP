doctype html
html
    head
        include ./templates_pug/default-head.pug
        title 发布展示窗
        link(href="/components/bfi/css/fileinput.min.css",rel="stylesheet")
        link(href="/css/uploaddisplay.css",rel="stylesheet")
        script(src="/components/bfi/js/plugins/sortable.min.js",type="text/javascript")
        script(src="/components/bfi/js/plugins/purify.min.js",type="text/javascript")
        script(src="/components/bfi/js/fileinput.min.js",type="text/javascript")
        script(src="/components/bfi/js/locales/zh.js",type="text/javascript")
        script(src="/js/uploaddisplay.js",type="text/javascript")
        script(src="/js/csrfheader.js",type="text/javascript")
    body
        nav.navbar.navbar-inverse
            include ./templates_pug/navbar-container.pug
        div.container.circlecircum
            div.row.darkback.margin-bottom-small
                h1.text-center 发布展示窗
            label 上传图片
            input#imginput(name="file",type="file",multiple="multiple")
            hr
            div.row
                div#titlegroup.form-group.text-center.col-md-6.col-md-push-3
                    div#infodiv.alert.alert-danger
                    label(for="title") 标题
                    br
                    input#title.form-cotrol(type="text",maxlength="50",placeholder="请输入标题")
            div.row
                div#descriptiongroup.form-group.text-center.col-md-6.col-md-push-3
                    label(for="description") 介绍文字
                    br
                    textarea#description(maxlength="300",placeholder="请输入描述")
            div.row
                div.text-center.col-md-4.col-md-push-4
                    button#submitbtn.btn.btn-lg.btn-success(type="button", onclick="postWindow()").margin-bottom-small 完成